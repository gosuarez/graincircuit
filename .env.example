# Shared Environment Variables
SECRET_KEY=your_secret_key               # Django secret key
SESSION_COOKIE_SECURE=False              # True for production
CSRF_COOKIE_SECURE=False                 # True for production
DEBUG=False                              # True for development, False for production
ALLOWED_HOSTS=localhost,127.0.0.1,*      # Use your Azure host for production
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1  # Update for production
DATABASE=postgres                        # Database type

# Azure Settings
USE_AZURE_STORAGE=False                  # Enable Azure Blob Storage integration
AZURE_ACCOUNT_NAME=your_azure_account_name
AZURE_ACCOUNT_KEY=your_azure_account_key
AZURE_STATIC_CONTAINER=staticfiles_container_name
AZURE_MEDIA_CONTAINER=mediafiles_container_name

# PostgreSQL Database Settings
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password
POSTGRES_HOST=your_database_host
POSTGRES_PORT=5432

# Environment-Specific Notes
# For Development
# DEBUG=True
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False
# ALLOWED_HOSTS=localhost,127.0.0.1
# USE_AZURE_STORAGE=False

# For Production
# DEBUG=False
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# ALLOWED_HOSTS=your_production_host
# USE_AZURE_STORAGE=True
